if (EXISTS "@CMAKE_CURRENT_BINARY_DIR@/install_dir_manifest.txt")
    file(READ "@CMAKE_CURRENT_BINARY_DIR@/install_dir_manifest.txt" files)
    string(REGEX REPLACE "\n" ";" files "${files}")
    foreach (file ${files})
        message(STATUS "Uninstalling \"$ENV{DESTDIR}${file}\"")
#if (EXISTS "$ENV{DESTDIR}${file}")
            execute_process(
                COMMAND @CMAKE_COMMAND@ -E remove_directory "$ENV{DESTDIR}${file}"
                OUTPUT_VARIABLE rm_out
                RESULT_VARIABLE rm_retval
            )
            if(NOT ${rm_retval} EQUAL 0)
                message(STATUS "Problem when removing \"$ENV{DESTDIR}${file}\"")
            endif (NOT ${rm_retval} EQUAL 0)
#else (EXISTS "$ENV{DESTDIR}${file}")
#message(STATUS "File \"$ENV{DESTDIR}${file}\" does not exist.")
#endif (EXISTS "$ENV{DESTDIR}${file}")
    endforeach(file)
endif (EXISTS "@CMAKE_CURRENT_BINARY_DIR@/install_dir_manifest.txt")
